<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="rtl"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/close"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:id="@+id/close"
                    android:tint="#CDA1A1A1"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:textColor="#373737"
                    android:layout_marginTop="13dp"
                    android:text="GEMS PLUS"
                    android:fontFamily="@font/arb_1"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:scaleType="fitCenter"
                            android:layout_gravity="center"
                            android:src="@drawable/gems_box"
                            android:layout_width="170dp"
                            android:layout_height="130dp"/>
                        <TextView
                            android:textColor="#373737"
                            android:layout_marginTop="10dp"
                            android:text="@string/id_81"
                            android:fontFamily="@font/arb_1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="#5A5A5A"
                            android:text="@string/gems_plus"
                            android:fontFamily="@font/arb_1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:id="@+id/description"
                            android:layout_marginEnd="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <HorizontalScrollView
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal" >


                                <androidx.cardview.widget.CardView
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:backgroundTint="#4B46CF"
                                    card_view:cardCornerRadius="20dp"
                                    >
                                    <FrameLayout
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:orientation="vertical" >


                                        <ImageView
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="50dp"
                                            android:layout_marginBottom="5dp"
                                            android:layout_height="50dp"
                                            android:scaleType="fitCenter"
                                            android:layout_gravity="center"
                                            android:src="@drawable/one_gem"/>
                                        <TextView
                                            android:textColor="#FFFFFF"
                                            android:text="@string/id_84"
                                            android:fontFamily="@font/arb_1"
                                            android:layout_gravity="bottom|center_horizontal"
                                            android:gravity="center"
                                            android:paddingBottom="2dp"
                                            android:textSize="15sp"
                                            android:background="#4EFFFFFF"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>

                                        <FrameLayout
                                            android:layout_marginEnd="5dp"
                                            android:layout_marginBottom="10dp"
                                            android:layout_width="40dp"
                                            android:layout_gravity="bottom|end"
                                            android:layout_height="40dp">
                                            <ImageView
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:scaleType="fitCenter"
                                                android:src="@drawable/sale"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"/>
                                            <TextView
                                                android:textColor="@color/white"
                                                android:text="3%"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textSize="12sp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"/>


                                        </FrameLayout>
                                    </FrameLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:backgroundTint="#8646CF"
                                    card_view:cardCornerRadius="20dp"
                                    >
                                    <FrameLayout
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:orientation="vertical" >


                                        <ImageView
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="70dp"
                                            android:layout_marginBottom="10dp"
                                            android:layout_height="70dp"
                                            android:scaleType="fitCenter"
                                            android:layout_gravity="center"
                                            android:src="@drawable/three_gems"/>
                                        <TextView
                                            android:textColor="#FFFFFF"
                                            android:text="@string/id_85"
                                            android:fontFamily="@font/arb_1"
                                            android:layout_gravity="bottom|center_horizontal"
                                            android:gravity="center"
                                            android:paddingBottom="2dp"
                                            android:textSize="15sp"
                                            android:background="#4EFFFFFF"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>

                                        <FrameLayout
                                            android:layout_marginEnd="5dp"
                                            android:layout_marginBottom="10dp"
                                            android:layout_width="40dp"
                                            android:layout_gravity="bottom|end"
                                            android:layout_height="40dp">
                                            <ImageView
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:scaleType="fitCenter"
                                                android:src="@drawable/sale"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"/>
                                            <TextView
                                                android:textColor="@color/white"
                                                android:text="6%"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textSize="12sp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"/>


                                        </FrameLayout>
                                    </FrameLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:backgroundTint="#CF4688"
                                    card_view:cardCornerRadius="20dp"
                                    >
                                    <FrameLayout
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:orientation="vertical" >


                                        <ImageView
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="90dp"
                                            android:layout_height="90dp"
                                            android:layout_marginBottom="12dp"
                                            android:scaleType="fitCenter"
                                            android:layout_gravity="center"
                                            android:src="@drawable/fife_gems"/>
                                        <TextView
                                            android:textColor="#FFFFFF"
                                            android:text="@string/id_86"
                                            android:fontFamily="@font/arb_1"
                                            android:layout_gravity="bottom|center_horizontal"
                                            android:gravity="center"
                                            android:textSize="15sp"
                                            android:paddingBottom="2dp"
                                            android:background="#4EFFFFFF"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>

                                        <FrameLayout
                                            android:layout_marginEnd="5dp"
                                            android:layout_marginBottom="10dp"
                                            android:layout_width="40dp"
                                            android:layout_gravity="bottom|end"
                                            android:layout_height="40dp">
                                            <ImageView
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:scaleType="fitCenter"
                                                android:src="@drawable/sale"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"/>
                                            <TextView
                                                android:textColor="@color/white"
                                                android:text="10%"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textSize="12sp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"/>


                                        </FrameLayout>
                                    </FrameLayout>
                                </androidx.cardview.widget.CardView>


                            </LinearLayout>
                        </HorizontalScrollView>

                        <TextView
                            android:textColor="#373737"
                            android:layout_marginTop="10dp"
                            android:text="@string/id_82"
                            android:fontFamily="@font/arb_1"
                            android:layout_marginStart="60dp"
                            android:layout_marginEnd="60dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="#5A5A5A"
                            android:text="@string/gems_plus_2"
                            android:fontFamily="@font/arb_1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <FrameLayout
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/pay"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <mehdi.sakout.fancybuttons.FancyButton
                    xmlns:fancy="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="#FBC627"
                    fancy:fb_focusColor="@color/colorPrimaryDark"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="@string/id_609"
                    fancy:fb_textColor="#FBC627" />
                <LinearLayout
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/white"
                        android:text="@string/id_280"
                        android:fontFamily="@font/arb_1"
                        android:layout_gravity="center"
android:id="@+id/price"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>


            </FrameLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
