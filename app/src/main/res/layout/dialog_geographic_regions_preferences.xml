<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/gps_blue"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <TextView
            android:layout_marginStart="10dp"
            android:textColor="#373737"
            android:text="@string/id_87"

            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ScrollView
        android:fadeScrollbars="false"
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:text="@string/id_177"
                        android:layout_marginTop="10dp"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:text="@string/id_177"
                        android:layout_marginTop="13dp"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:textDirection="rtl"
                        android:layoutDirection="rtl"
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp">

                        <RadioButton
                            android:id="@+id/noPreferences"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_marginTop="4dp"
                            android:tag="noPreferences"
                            android:text="@string/id_88"/>

                        <RadioButton
                            android:id="@+id/myCountry"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_marginTop="4dp"
                            android:tag="myCountry"
                            android:text="@string/id_89"/>
                        <RadioButton
                            android:id="@+id/global"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_marginTop="4dp"

                            android:tag="global"
                            android:text="@string/id_90"/>
                        <View
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:background="#BABABA"
                            android:layout_marginBottom="10dp"
                            android:layout_height="1dp"/>

                    </RadioGroup>
                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>




    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#BABABA"
        android:layout_height="1dp"/>
    <TextView
        android:paddingStart="10dp"
        android:textColor="@color/colorPrimary"
        android:text="@string/ok"
        android:id="@+id/ok"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
