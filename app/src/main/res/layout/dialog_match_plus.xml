<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/match_1"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_height="110dp"/>
            <TextView
                android:textColor="@color/black"
                android:text="Match Plus"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:textColor="#5A5A5A"
                android:text="@string/id_99"
                android:fontFamily="@font/arb_1"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:listitem="@layout/item_wrap_circle_image_view"
                android:orientation="horizontal"
                android:id="@+id/recycler_view"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>


            <FrameLayout
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:id="@+id/next"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <mehdi.sakout.fancybuttons.FancyButton
                    xmlns:fancy="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="#874FEC"
                    fancy:fb_focusColor="@color/colorPrimaryDark"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="@string/id_609"
                    fancy:fb_textColor="#874FEC" />
                <LinearLayout
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:textColor="@color/white"
                            android:text="@string/id_100"
                            android:fontFamily="@font/arb_1"
                            android:textSize="15sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@color/white"
                            android:text="@string/id_280"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:id="@+id/price"
                            android:fontFamily="@font/arb_1"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                </LinearLayout>


            </FrameLayout>
            <TextView
                android:textColor="#676767"
                android:text="@string/close"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:layout_gravity="center"
                android:fontFamily="@font/arb_1"
                android:id="@+id/close"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
