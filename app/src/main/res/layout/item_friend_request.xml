<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_alignParentBottom="true"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/item"
        android:background="@color/white"
        card_view:cardCornerRadius="0dp"
        >
        <RelativeLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout

                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                >
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="90dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/loading"
                        android:id="@+id/profileImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/white"/>



                </FrameLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:textColor="@color/black"
                        android:text="@string/id_612"
                        android:fontFamily="@font/arb_1"
                        android:id="@+id/name"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp">
                        <ImageView
                            android:scaleType="fitCenter"
                            android:src="@drawable/flag"
                            android:layout_width="27dp"
                            android:id="@+id/countryFlag"
                            android:visibility="gone"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_height="27dp">
                        </ImageView>
                        <TextView
                            android:textColor="#CC000000"
                            android:text="@string/id_613"
                            android:fontFamily="@font/arb_1"
                            android:id="@+id/country"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    >
                    <mehdi.sakout.fancybuttons.FancyButton
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        xmlns:fancy="http://schemas.android.com/apk/res-auto"
                        android:layout_height="wrap_content"
                   android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        fancy:fb_borderColor="@color/colorPrimary"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="@color/colorPrimary"
                        fancy:fb_focusColor="@color/colorPrimaryDark"
                        fancy:fb_radius="0dp"
                        fancy:fb_text=""
                        fancy:fb_textColor="@color/white" />

                    <TextView
                        android:textColor="@color/white"
                        android:text="@string/id_13"
                        android:paddingBottom="3dp"
                        android:id="@+id/accept"
                        android:fontFamily="@font/arb_1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    >
                    <mehdi.sakout.fancybuttons.FancyButton
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        xmlns:fancy="http://schemas.android.com/apk/res-auto"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        fancy:fb_borderColor="@color/colorPrimary"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="@color/white"
                        fancy:fb_focusColor="@color/colorPrimaryDark"
                        fancy:fb_radius="0dp"
                        fancy:fb_text=""
                        fancy:fb_textColor="@color/white" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:paddingBottom="3dp"
                        android:text="@string/id_139"
                        android:id="@+id/deny"
                        android:fontFamily="@font/arb_1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>




            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
