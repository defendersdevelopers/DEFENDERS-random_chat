<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/backgraund"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".getStarted.hobbies">
    <TextView
        android:layout_alignParentStart="true"
        android:textColor="#BAFFFFFF"
        android:text="@string/skip"
        android:onClick="skip"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/arb_1"
        android:layout_gravity="top|center"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <ImageView
        android:scaleType="fitCenter"
        android:src="@drawable/ho_1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/logo"
        android:layout_width="290dp"
        android:layout_height="290dp"/>
    <TextView
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:text="@string/id_136"
        android:fontFamily="@font/arb_1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_alignParentStart="true"
        android:textColor="#BAFFFFFF"
        android:text="@string/id_145"
        android:fontFamily="@font/arb_1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>

    <FrameLayout
        android:onClick="ok"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <mehdi.sakout.fancybuttons.FancyButton
            xmlns:fancy="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_spotify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            fancy:fb_borderColor="@color/white"
            fancy:fb_borderWidth="1dp"
            android:onClick="ok"
            fancy:fb_defaultColor="@color/white"
            fancy:fb_focusColor="@color/colorPrimaryDark"
            fancy:fb_radius="0dp"
            fancy:fb_text="@string/id_609"
            fancy:fb_textColor="@color/white" />
        <TextView
            android:textColor="@color/colorPrimary"
            android:text="@string/ok"
            android:fontFamily="@font/arb_1"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>
</FrameLayout>