<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="13dp"
            android:text="@string/id_109"
            android:fontFamily="@font/arb_1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="#BABABA"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/improperLanguage"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
            android:layout_marginTop="5dp"
            android:text="@string/id_110"
            android:layout_marginStart="10dp"
            android:textColor="#3A3A3A"
            android:fontFamily="@font/arb_1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="start"
            android:gravity="start"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView

            android:text="@string/id_111"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/arb_1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="start"
            android:gravity="start"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="#BABABA"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/improperBehavior"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="5dp"
            android:text="@string/id_112"
            android:layout_marginStart="10dp"
            android:textColor="#3A3A3A"
            android:fontFamily="@font/arb_1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="start"
            android:gravity="start"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView

            android:text="@string/id_120"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/arb_1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="start"
            android:gravity="start"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="#BABABA"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/close"
            android:textColor="@color/black"
            android:layout_marginTop="7dp"
            android:text="@string/id_121"
            android:fontFamily="@font/arb_1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>
