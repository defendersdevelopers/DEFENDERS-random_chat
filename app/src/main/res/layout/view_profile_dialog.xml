<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >


    <FrameLayout
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <androidx.cardview.widget.CardView
            android:layout_marginBottom="30dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            card_view:cardCornerRadius="30dp"
            >


            <ScrollView
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout

                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="500dp">
                        <ImageView
                            android:id="@+id/profileImage"
                            android:src="@drawable/loading"
                            android:scaleType="centerCrop"
                            android:layout_height="500dp"
                            android:layout_width="match_parent" />
                        <ImageView
                            android:src="@drawable/black_bottom"
                            android:scaleType="centerCrop"
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:layout_height="200dp">

                        </ImageView>
                        <LinearLayout
                            android:layout_marginBottom="20dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="bottom"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/white"
                                android:text="@string/id_612"
                                android:id="@+id/name"
                                android:fontFamily="@font/arb_1"
                                android:layout_marginTop="10dp"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp">
                                <ImageView
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/flag"
                                    android:id="@+id/countryFlag"
                                    android:layout_width="27dp"
                                    android:layout_marginTop="2dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_height="27dp">
                                </ImageView>
                                <TextView
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/white"
                                    android:text="@string/id_614"
                                    android:id="@+id/country"
                                    android:fontFamily="@font/arb_1"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <TextView
                                android:textColor="@color/white"
                                android:id="@+id/bio"
                                android:text="@string/id_610"
                                android:fontFamily="@font/arb_1"
                                android:textSize="17sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </FrameLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#B6000000"
                            android:text="@string/id_148"
                            android:id="@+id/inter_layout"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="start"
                            android:fontFamily="@font/arb_1"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:id="@+id/interests"
                            android:textColor="@color/black"
                            android:text="#hobbies here"
                            android:layout_gravity="start"
                            android:fontFamily="@font/arb_1"
                            android:textSize="17sp"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#B6000000"
                            android:text="@string/id_623"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="start"
                            android:fontFamily="@font/arb_1"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/imagesViewer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:columnWidth="90dp"
                            android:gravity="center"
                            android:stretchMode="columnWidth" />


                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layoutDirection="ltr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >


                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content">



                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:layout_width="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_gravity="center"
                                    android:id="@+id/love"
                                    android:src="@drawable/love_heart"
                                    android:background="@color/white"
                                    android:backgroundTint="@color/white"
                                    android:layout_height="wrap_content">

                                </com.google.android.material.floatingactionbutton.FloatingActionButton>

                                <TextView
                                    android:textColor="#B6000000"
                                    android:text="7"
                                    android:id="@+id/love_viewer"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/arb_1"
                                    android:textSize="15sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content">



                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:layout_width="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/like_love"
                                    android:background="@color/white"
                                    android:backgroundTint="@color/white"
                                    android:layout_height="wrap_content">

                                </com.google.android.material.floatingactionbutton.FloatingActionButton>

                                <TextView
                                    android:textColor="#B6000000"
                                    android:text="25"
                                    android:id="@+id/likes"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/arb_1"
                                    android:textSize="15sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#B6000000"
                            android:text="@string/loc"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="start"
                            android:fontFamily="@font/arb_1"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp">
                            <ImageView
                                android:scaleType="fitCenter"
                                android:src="@drawable/flag"
                                android:layout_width="27dp"
                                android:layout_marginTop="2dp"
                                android:id="@+id/countryFlag2"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_height="27dp">
                            </ImageView>
                            <TextView
                                android:layout_marginStart="10dp"
                                android:textColor="@color/black"
                                android:text="@string/id_614"
                                android:fontFamily="@font/arb_1"
                                android:gravity="center"
                                android:id="@+id/country2"
                                android:textSize="15sp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>


                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="#B6000000"
                        android:text="@string/id_624"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/arb_1"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/vip_azar"
                            android:layout_width="57dp"
                            android:layout_marginTop="2dp"
                            android:id="@+id/vipImage"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_height="57dp">
                        </ImageView>

                        <ImageView
                            android:scaleType="fitCenter"
                            android:src="@drawable/gems_plus_azar"
                            android:layout_width="57dp"
                            android:layout_marginTop="2dp"
                            android:id="@+id/gemsPlusImage"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_height="57dp">
                        </ImageView>

                    </LinearLayout>
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="#B6000000"
                        android:text="@string/time"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/arb_1"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/arb_1"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/localTime"
                        android:text="08:25 PM"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </ScrollView>


        </androidx.cardview.widget.CardView>

    </FrameLayout>

</FrameLayout>